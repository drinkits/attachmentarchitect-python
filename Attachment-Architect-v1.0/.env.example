# Jira Data Center Configuration
# Copy this file to .env and fill in your values

# Jira Instance URL (without trailing slash)
JIRA_BASE_URL=https://jira.company.com

# Authentication - Use Personal Access Token (recommended for DC 8.14+)
JIRA_TOKEN=your_personal_access_token_here

# OR use Basic Authentication (username + password)
# JIRA_USERNAME=your_username
# JIRA_PASSWORD=your_password

# Scan Configuration
BATCH_SIZE=100
THREAD_POOL_SIZE=12
MAX_FILE_SIZE_GB=5
DOWNLOAD_TIMEOUT_SECONDS=300
RATE_LIMIT_PER_SECOND=50

# Storage
DATABASE_PATH=./scans/scan.db
CHECKPOINT_INTERVAL=100

# Output
OUTPUT_DIR=./reports